<Window x:Class="SaveFixForWuxia.saveLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveFixForWuxia"
        mc:Ignorable="d"
        Title="打开存档" Height="174.401" Width="384.689">
    <Grid>
        <Label x:Name="OpenSaveLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10" FontWeight="UltraBlack" FontSize="16">请选择您要修改的存档</Label>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,55" Height="25" Width="260" BorderBrush="LightBlue" BorderThickness="1">
            <TextBox x:Name="PathText" FontSize="16" TextWrapping="NoWrap">C:\</TextBox>
        </Border>
        <Button x:Name="SurfFileButton" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,55" Width="45" Height="23" Click="SurfFileButton_Click">浏览</Button>
        <Button x:Name="BackButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,100,0,0" Height="25" Width="60" FontWeight="Bold" Click="BackButton_Click">返回</Button>
        <Button x:Name="ConfirmButton" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,100,30,0" Height="25" Width="60" FontWeight="Bold" Click="ConfirmButton_Click">确认</Button>
    </Grid>
</Window>
